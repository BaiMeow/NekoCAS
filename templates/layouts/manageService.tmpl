{{define "manageService"}}
    <div>
        <a href="/manage/service/new" class="uk-button uk-button-primary">新建服务</a>
    </div>
    <table class="uk-table uk-table-divider">
        <tbody>
        {{range $item := .services}}
            <div class="uk-card-header">
                <div class="uk-flex-middle" uk-grid>
                    <div class="uk-width-auto">
                        {{if eq $item.Avatar ""}}
                            <img class="uk-border-circle" width="40" height="40"
                                 src="https://cdn.v2ex.com/gravatar/{{$item.Name}}?s=64&d=identicon&f=y&r=g">
                        {{else}}
                            <img class="uk-border-circle" width="40" height="40" src="{{ $item.Avatar }}">
                        {{ end }}
                    </div>
                    <div class="uk-width-expand">
                        <h3 class="uk-text-small uk-margin-remove-bottom">{{$item.Name}}</h3>
                        {{if eq $item.Ban true}}
                            <span class="uk-label uk-label-danger">已禁用</span>
                        {{end}}
                    </div>
                    <div>
                    <span id="secret-id-{{$item.ID}}" class="uk-text-small uk-margin-remove-bottom"
                          hidden>{{$item.Secret}}</span>
                    </div>
                    <div>
                        <button class="uk-button-default" uk-toggle="target: #secret-id-{{$item.ID}}" type="button">显示
                            Secret
                        </button>
                    </div>
                    <div class="uk-float-right">
                        <form action="/manage/service/ban" method="post">
                            <input name="_csrf" value="{{$._csrf}}" hidden>
                            <input hidden name="id" value="{{$item.ID}}"/>
                            <button class="uk-button-default">{{if eq $item.Ban false}}禁用服务{{else}}恢复服务{{end}}</button>
                        </form>
                        <form action="/manage/service/delete" method="post">
                            <input name="_csrf" value="{{$._csrf}}" hidden>
                            <input hidden name="id" value="{{$item.ID}}"/>
                            <button class="uk-button-danger">删除服务</button>
                        </form>
                    </div>
                </div>
            </div>
        {{end}}
        </tbody>
    </table>
{{end}}