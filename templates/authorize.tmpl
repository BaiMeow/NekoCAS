{{template "header" .}}
<div class="uk-position-center">
    <div class="uk-card uk-card-default uk-card-body uk-width-large uk-card-small">
        <div class="uk-card-header">
            <h3 class="uk-card-title uk-margin-remove-bottom uk-text-center">授权 {{.serviceName}}</h3>
        </div>
        <div class="uk-card-body">
            <form action="/authorize" method="post">
                <input name="_csrf" value="{{._csrf}}" hidden>
                <input name="serviceURL" value="{{.serviceURL}}" hidden>
                <div class="uk-margin uk-text-center">
                    <button type="submit" class="uk-button uk-button-primary">确认授权</button>
                </div>
                <p></p>
            </form>
        </div>
        <div class="uk-card-footer">

        </div>
    </div>
</div>
{{template "footer" .}}